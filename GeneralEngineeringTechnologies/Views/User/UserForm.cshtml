@model GeneralEngineeringTechnologies.ViewModel.ApplicationUserWithRoles
@{
                /**/

                ViewBag.Title = "EditUser";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditUser</h2>
@using (Html.BeginForm("Save", "User"))
{
    @Html.ValidationSummary(true, "Fix all errors!!")

    <div class="form-group">
        @Html.LabelFor(x => x.AppUser.UserName)
        @Html.TextBoxFor(x => x.AppUser.UserName, new { @class = "from-control" })
        @Html.ValidationMessageFor(x => x.AppUser.UserName)

    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.AppUser.Email)
        @Html.TextBoxFor(x => x.AppUser.Email, new { @class = "from-control" })
    </div>

    <div class="form-group">
        @Html.LabelForModel(Model.CurrentRole)
        @Html.DropDownListFor(x => x.CurrentRole, new SelectList(Model.Roles), Model.CurrentRole)
        @Html.ValidationMessageFor(x => x.CurrentRole)
    </div>

    @Html.HiddenFor(x => x.AppUser.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn btn-primary">Save</button>
}

@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
}
